extends layout
block content
    div.login
        form(action="/login", method="post")
            .row
                .small-8.columns
                    .small-3.columns
                        label(for="loginName", class="right inline") 用户名
                    .small-9.columns
                        input(type="text",id="loginName",name="loginName", placeholder="输入用户名")
            .row
                .small-8.columns
                    .small-3.columns
                        label(for="userPwd", class="right inline") 密码
                    .small-9.columns
                        input(type="password",id="userPwd", name="userPwd",placeholder="密码")

            .row
                .small-3.small-centered.columns
                    button(type="submit",class="button tiny") 提交